description "Ceilometer: <%= @name %>"
author "Endre Karlson <endre.karlson@gmail.com>"

start on runlevel [2345]
stop on runlevel [016]

chdir /var/run

pre-start script
    mkdir -p /var/run/ceilometer
    chown quantum:root /var/run/ceilometer
end script

exec start-stop-daemon --start --chuid ceilometer --exec /usr/local/bin/<%= @name %> -- --config-file=/etc/ceilometer/ceilometer.conf --log-file=/var/log/ceilometer/<%= @name %>.log
